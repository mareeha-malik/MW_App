{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node", // Use "node" module resolution
    "baseUrl": "./", // This should be the root of your project
    "paths": {
      "@/*": [
        "src/*"
      ], // Correctly map "@/*" to the "src" directory
      "@Components/*": [
        "src/app/Components/*"
      ], // Map "@Components" to the Components directory
      "@lib/*": [
        "src/lib/*"
      ] // Add this line to map "@lib" to the "src/lib" directory
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/utils/api.js",
    "src/app/Components/AddBlogModal.jsx",
    "src/app/Components/ui/AddProductModal.tsx",
    "src/app/Components/ui/card.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
